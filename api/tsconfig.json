{
  "compilerOptions": {
    "target": "ES2020", // Target modern Node.js version
    "module": "CommonJS", // Output CommonJS modules
    "moduleResolution": "Node", // Use Node.js module resolution
    "outDir": ".vercel/output/functions", // Specify an output directory (Vercel might override this)
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true, // Treat files as separate modules (good practice for API routes)
    "noImplicitAny": false // Allowing implicit any for now, can be stricter later
  },
  "include": ["**/*.ts"], // Include all .ts files within the api directory
  "exclude": ["node_modules"]
}
